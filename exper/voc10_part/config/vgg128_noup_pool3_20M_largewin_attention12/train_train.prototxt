    lr_mult: 10
    decay_mult: 1
  }
  param {
    name: "fc8_b"
    lr_mult: 20
    decay_mult: 0
  }
  convolution_param {
    num_output: 7
    kernel_size: 1
    weight_filler {
      type: "gaussian"
      std: 0.01
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

############### classifier ###################
layer {
  bottom: "fc7_res05"
  top: "fc8_voc10_part_res05"
  name: "fc8_voc10_part_res05"
  type: "Convolution"
  param {
    name: "fc8_w"
    lr_mult: 10
    decay_mult: 1
  }
  param {
    name: "fc8_b"
    lr_mult: 20
    decay_mult: 0
  }
  convolution_param {
    num_output: 7
    kernel_size: 1
    weight_filler {
      type: "gaussian"
      std: 0.01
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

############### upsampling ##################
layer {
  bottom: "fc8_voc10_part_res05"
  top: "fc8_voc10_part_res05_interp"
  name: "fc8_voc10_part_res05_interp"
  type: "Interp"
  interp_param {
    zoom_factor: 2
    pad_beg: 0
    pad_end: 0
  }
}

############### concatenation and pass through attention model #########
layer {
  bottom: "fc8_voc10_part"
  bottom: "fc8_voc10_part_res05_interp"
  top: "fc8_concat"
  name: "fc8_concat"
  type: "Concat"
  concat_param {
    axis: 1
  }
}

### attention model
layer {
  bottom: "fc8_concat"
  top: "att_conv1"
  name: "att_conv1"
  type: "Convolution"
  param {
    lr_mult: 10
    decay_mult: 1
  }
  param {
    lr_mult: 20
    decay_mult: 0
  }
  convolution_param {
    num_output: 64
    kernel_size: 3
    pad: 1
    weight_filler {
      type: "gaussian"
      std: 0.005
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
layer {
  bottom: "att_conv1"
  top: "att_conv1"
  name: "relu_att_conv1"
  type: "ReLU"
}
layer {
  bottom: "att_conv1"
  top: "att_conv1"
  name: "drop_att_conv1"
  type: "Dropout"
  dropout_param {
    dropout_ratio: 0.5
  }
}

layer {
  bottom: "att_conv1"
  top: "att_fc"
  name: "att_fc"
  type: "Convolution"
  param {
    lr_mult: 10
    decay_mult: 1
  }
  param {
    lr_mult: 20
    decay_mult: 0
  }
  convolution_param {
    num_output: 2
    kernel_size: 1
    weight_filler {
      type: "gaussian"
      std: 0.01
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}
layer {
  bottom: "att_fc"
  top: "attention"
  name: "attention"
  type: "Softmax"
}

############### collect the output from attention model ########
layer {
  bottom: "attention"
  top: "attention1"
  top: "attention2"
  name: "slice_attention"
  type: "Slice"
  slice_param {
    axis: 1
    slice_point: 1
  }
}

############### scale features #############
layer {
  bottom: "fc8_voc10_part"
  bottom: "attention1"
  top: "fc8_product"
  name: "fc8_product"
  type: "SpatialProduct"
}

layer {
  bottom: "fc8_voc10_part_res05_interp"
  bottom: "attention2"
  top: "fc8_res05_product" 
  name: "fc8_res05_product"
  type: "SpatialProduct"
}

### add features ###
layer {
  bottom: "fc8_product"
  bottom: "fc8_res05_product"
  top: "fc8_fusion"
  name: "fc8_fusion"
  type: "Eltwise"
  eltwise_param {
    operation: SUM
  }
}
############### shrink label ################
layer {
  bottom: "label"
  top: "label_shrink8"
  name: "label_shrink8"
  type: "Interp"
  interp_param {
    shrink_factor: 8
    pad_beg: 0
    pad_end: 0
  }
}
############### compute loss #################
layer {
  name: "loss"
  type: "SoftmaxWithLoss"
  bottom: "fc8_fusion"
  bottom: "label_shrink8"
  loss_param {
    ignore_label: 255
  }
  include: { phase: TRAIN }
}
layer {
  name: "accuracy"
  type: "SegAccuracy"
  bottom: "fc8_fusion"
  bottom: "label_shrink8"
  top: "accuracy"
  seg_accuracy_param {
    ignore_label: 255
  } 
}
